<h1>All users</h1>

<table align="left">
	<tr align="center">
		<td>Name: </td>
		<td>Surname: </td>
		<td>Email: </td>
	</tr>
	<% @users.each do |u| %>
		<tr align="center">
			<td><%= link_to u.name, user_path(u) %></td>
			<td><%= u.surname %></td>
			<td><%= u.email %></td>
		</tr>
	<% end %>
</table>
<br>
